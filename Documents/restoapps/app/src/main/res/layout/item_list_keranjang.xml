<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rlil1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/daftar_icon1"
            android:background="@color/morning">
            <TextView
                android:id="@+id/lblstat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status :"
                android:layout_margin="5dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/statKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="-"
                android:textColor="@color/white"/>
        </LinearLayout>


        <TextView
            android:id="@+id/daftar_icon1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="matrix"
            android:text="D"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textIsSelectable="false"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/daftar_judul1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/daftar_deskripsi1"
            android:layout_alignStart="@+id/daftar_deskripsi1"
            android:layout_alignTop="@+id/daftar_icon1"
            android:layout_marginTop="5dp"
            android:text="Judul"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/daftar_deskripsi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/daftar_judul1"
            android:layout_margin="5dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/daftar_icon1"
            android:ellipsize="end"
            android:text="Price"
            android:textColor="#666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/delete"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="32dp"

            android:layout_height="40dp"
            android:layout_alignEnd="@+id/daftar_deskripsi1"
            android:layout_alignRight="@+id/daftar_deskripsi1"
            android:layout_alignTop="@+id/daftar_judul1"
            android:text="X" />

    </RelativeLayout>


</android.support.v7.widget.CardView>